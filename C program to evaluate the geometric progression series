#include<stdio.h>
#include<conio.h>
#define LOOP 100
#define ACCURACY 0.0001
void main()
{
    int n;
    float x,term,sum;
    printf("Input value of x: ");
    scanf("%f",&x);
    sum=0;
    for(term=1, n=1; n<=LOOP; ++n)
    {
        sum+=term;
        if(term<=ACCURACY)
        goto output;
        term*=x;
    }
    printf("FINAL VALUE OF N IS NOT SUFFICIENT TO ACHIEVE DESIRED ACCURACYn");
    goto end;
    output:
    printf("EXIT FROM LOOPn");
    end:
    printf("sum=%f number of terms=%d",sum,n);
}
